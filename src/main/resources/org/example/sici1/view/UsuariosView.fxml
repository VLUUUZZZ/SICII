<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.sici1.controller.UsuariosView">
    <children>
        <!-- Título -->
        <Label layoutX="70" layoutY="48" text="Usuarios"
               style="-fx-font-size:26; -fx-font-family:'Segoe UI Semibold';"/>

        <!-- Botón Agregar -->
        <Button fx:id="btnAgregar" text="Agregar" layoutX="650" layoutY="58"
                prefWidth="100" prefHeight="36"
                style="-fx-background-color:#1976d2; -fx-text-fill:white; -fx-font-size:16;"/>

        <!-- Botón Editar (opcional) -->
        <Button fx:id="btnEditar" text="Editar" layoutX="540" layoutY="58"
                prefWidth="100" prefHeight="36"
                style="-fx-background-color:#ff8800; -fx-text-fill:white; -fx-font-size:16;"/>

        <!-- Buscador principal -->
        <HBox layoutX="70" layoutY="95" spacing="10">
            <children>
                <TextField fx:id="txtBuscar" promptText="Buscar usuario o nombre..." prefWidth="200"/>
                <Button fx:id="btnBuscar" text="Buscar"/>
            </children>
        </HBox>

        <!-- Tabla de Usuarios -->
        <TableView fx:id="tableUsuarios" layoutX="65" layoutY="140"
                   prefWidth="700" prefHeight="360">
            <columns>
                <TableColumn fx:id="colUsuario" text="Usuario" prefWidth="110"/>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="180"/>
                <TableColumn fx:id="colRol" text="Rol" prefWidth="120"/>
                <TableColumn fx:id="colEstado" text="Estado" prefWidth="80"/>
                <TableColumn fx:id="colSwitch" text="" prefWidth="60"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>
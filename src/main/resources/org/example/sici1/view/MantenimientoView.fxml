<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.sici1.controller.MantenimientoView">

    <center>
        <VBox spacing="11">
            <padding>
                <Insets top="24" left="24" right="24" bottom="24"/>
            </padding>

            <Label text="Mantenimiento de Activos" styleClass="title-label">
                <font>
                    <Font name="Segoe UI Semibold" size="21"/>
                </font>
            </Label>

            <TableView fx:id="tablaMantenimientos" prefHeight="240">
                <columns>
                    <TableColumn fx:id="colActivo" text="Activo" prefWidth="110"/>
                    <TableColumn fx:id="colTipo" text="Tipo" prefWidth="90"/>
                    <TableColumn fx:id="colFechaProgramada" text="Fecha Programada" prefWidth="110"/>
                    <TableColumn fx:id="colFechaRealizado" text="Fecha Realizada" prefWidth="110"/>
                    <TableColumn fx:id="colResponsable" text="Responsable" prefWidth="110"/>
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="90"/>
                    <TableColumn fx:id="colCosto" text="Costo" prefWidth="80"/>
                    <TableColumn fx:id="colNotas" text="Notas" prefWidth="150"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="14" alignment="CENTER_LEFT">
            <ComboBox fx:id="cmbActivo" promptText="Activo" minWidth="120"/>
            <ComboBox fx:id="cmbTipo" promptText="Tipo" minWidth="110"/>
            <DatePicker fx:id="dpFechaProgramada" promptText="Fecha Programada"/>
            <DatePicker fx:id="dpFechaRealizado" promptText="Fecha Realizada"/>
            <TextField fx:id="txtResponsable" promptText="Responsable" minWidth="110"/>
            <ComboBox fx:id="cmbEstado" promptText="Estado" minWidth="100"/>
            <TextField fx:id="txtCosto" promptText="Costo" minWidth="80"/>
            <TextArea fx:id="txtNotas" promptText="Notas" prefRowCount="1" prefColumnCount="10" minWidth="120"/>
            <Button fx:id="btnGuardar" text="Guardar"/>
            <Button fx:id="btnEliminar" text="Eliminar"/>
        </HBox>
    </bottom>
</BorderPane>

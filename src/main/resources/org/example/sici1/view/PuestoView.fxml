<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.sici1.controller.PuestoView">
    <children>
        <!-- Título -->
        <Label layoutX="70" layoutY="48" text="Puestos"
               style="-fx-font-size:26; -fx-font-family:'Segoe UI Semibold';"/>

        <!-- Botón Nuevo (solo admin) -->
        <Button fx:id="btnNuevo" text="Nuevo" layoutX="650" layoutY="58"
                prefWidth="100" prefHeight="36"
                style="-fx-background-color:#1976d2; -fx-text-fill:white; -fx-font-size:16;"/>

        <!-- Botón Editar (arriba, junto a Nuevo) -->
        <Button fx:id="btnEditar" text="Editar" layoutX="540" layoutY="58"
                prefWidth="100" prefHeight="36"
                style="-fx-background-color:#ff8800; -fx-text-fill:white; -fx-font-size:16;"/>

        <!-- Buscador principal -->
        <HBox layoutX="70" layoutY="95" spacing="10">
            <children>
                <TextField fx:id="txtBuscar" promptText="Buscar puesto..." prefWidth="200"/>
                <Button fx:id="btnBuscar" text="Buscar"/>
            </children>
        </HBox>

        <!-- Tabla de Puestos (sin switch ni lápiz) -->
        <TableView fx:id="tablePuestos" layoutX="65" layoutY="140"
                   prefWidth="700" prefHeight="360">
            <columns>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="400"/>
                <TableColumn fx:id="colEstado" text="Estado" prefWidth="150"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.sici1.controller.BitacoraView"
            stylesheets="@/org/example/sici1/styles.css">

    <top>
        <HBox spacing="15" alignment="CENTER_LEFT">
            <padding>
                <Insets top="15" left="18" right="18" bottom="10"/>
            </padding>
            <Label text="Bitácora de Cambios" styleClass="title-label"/>
            <Region HBox.hgrow="ALWAYS"/>
            <TextField fx:id="txtBuscar" promptText="Buscar por usuario..." styleClass="form-input"></TextField>
            <Button fx:id="btnExportar" text="Exportar a PDF" styleClass="primary-button"/>
            <Button fx:id="btnLimpiar" text="Limpiar" styleClass="danger-button"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="tableBitacora" styleClass="data-table">
            <columns>
                <TableColumn fx:id="colUsuario" text="Usuario" prefWidth="120"/>
                <TableColumn fx:id="colAccion" text="Acción" prefWidth="90"/>
                <TableColumn fx:id="colActivo" text="Activo" prefWidth="130"/>
                <TableColumn fx:id="colFecha" text="Fecha" prefWidth="110"/>
                <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="250"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>

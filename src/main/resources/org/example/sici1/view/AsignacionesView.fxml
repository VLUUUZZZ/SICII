<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.sici1.controller.AsignacionesView"
            prefWidth="1040" prefHeight="560">

    <children>

        <!-- Título -->
        <Label layoutX="70" layoutY="36" text="Inventario"
               style="-fx-font-size:26; -fx-font-family:'Segoe UI Semibold';"/>

        <!-- Estado/Info -->
        <Label fx:id="lblInventarioId"
               layoutX="70" layoutY="72"
               text="Inventario: —"
               style="-fx-text-fill:#333; -fx-font-size:13;"/>
        <Label fx:id="lblInfo"
               layoutX="70" layoutY="92"
               text=""
               style="-fx-text-fill:#777; -fx-font-size:12;"/>

        <!-- Barra de acciones -->
        <HBox layoutX="70" layoutY="120" spacing="10">
            <children>
                <Button fx:id="btnCrearInventario" text="Crear encabezado"
                        prefWidth="150" prefHeight="36"
                        style="-fx-background-color:#1976d2; -fx-text-fill:white; -fx-font-size:14;"/>

                <TextField fx:id="txtCodigoBien" promptText="Código de bien"
                           prefWidth="220"/>

                <Button fx:id="btnAgregarBien" text="Agregar bien"
                        prefWidth="120" prefHeight="36"
                        style="-fx-background-color:#2e7d32; -fx-text-fill:white; -fx-font-size:14;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- Botón de imprimir requerido por tu .java -->
                <Button fx:id="btnImprimir" text="Imprimir"
                        prefWidth="120" prefHeight="36"
                        style="-fx-background-color:#455a64; -fx-text-fill:white; -fx-font-size:14;"/>
            </children>
            <padding><Insets top="0" right="0" bottom="0" left="0"/></padding>
        </HBox>

        <!-- Tabla de detalle -->
        <TableView fx:id="tablaDetalle" layoutX="65" layoutY="170"
                   prefWidth="900" prefHeight="360">
            <columns>
                <TableColumn fx:id="colCodigo" text="Código" prefWidth="180"/>
                <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="520"/>
                <TableColumn fx:id="colEstado" text="Estado" prefWidth="120"/>
                <TableColumn fx:id="colDesasignar" text="Acción" prefWidth="80"/>
            </columns>
        </TableView>

    </children>
</AnchorPane>

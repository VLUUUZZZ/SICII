<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.sici1.controller.MovimientosView">

    <top>
        <Label text="Entradas y Salidas de Inventario" styleClass="title-label">
            <font>
                <Font name="Segoe UI Semibold" size="22"/>
            </font>
        </Label>
    </top>

    <center>
        <TableView fx:id="tableMovimientos" prefHeight="320">
            <columns>
                <TableColumn fx:id="colTipo" text="Tipo" prefWidth="85"/>
                <TableColumn fx:id="colActivo" text="Activo" prefWidth="130"/>
                <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="80"/>
                <TableColumn fx:id="colFecha" text="Fecha" prefWidth="110"/>
                <TableColumn fx:id="colResponsable" text="Responsable" prefWidth="150"/>
                <TableColumn fx:id="colMotivo" text="Motivo" prefWidth="160"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="form-box">
            <padding>
                <Insets top="12" left="16" right="16" bottom="12"/>
            </padding>
            <ComboBox fx:id="cmbTipo" promptText="Tipo"/>
            <TextField fx:id="txtActivo" promptText="Activo"/>
            <TextField fx:id="txtCantidad" promptText="Cantidad"/>
            <TextField fx:id="txtFecha" promptText="YYYY-MM-DD"/>
            <TextField fx:id="txtResponsable" promptText="Responsable"/>
            <TextField fx:id="txtMotivo" promptText="Motivo"/>
            <Button fx:id="btnAgregar" text="Agregar"/>
            <Button fx:id="btnEliminar" text="Eliminar Seleccionado"/>
        </HBox>
    </bottom>
</BorderPane>
